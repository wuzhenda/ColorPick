<Window x:Class="ColorPicker.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Color Picker"
        Topmost="True"
    WindowStartupLocation="CenterScreen" Width="300" Height="300" Closing="OnWindowClosing">
    <DockPanel>
        <ToggleButton DockPanel.Dock="Top" Content="Hook/UnHook" Click="Button_Click"/>
        <TextBox DockPanel.Dock="Top" IsReadOnly="True" Name="colorText"/>
        <DockPanel Name="colorPanel"/>
    </DockPanel>
</Window>
